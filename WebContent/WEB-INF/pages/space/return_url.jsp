		body = new String(request.getParameter("body").getBytes("ISO-8859-1"), "GBK");//商品描述、订单备注、描述
	}
	String buyer_email = request.getParameter("buyer_email");		//买家支付宝账号
	String trade_status = request.getParameter("trade_status");		//交易状态
